{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "~": ["."],
      "@api/*": ["./api"],
      "@routes/*": ["./routes"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@screens/*": ["./screens/*"],
      "@assets/*": ["./assets/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
